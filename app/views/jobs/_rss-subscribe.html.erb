<%= turbo_frame_tag :subscribers do %>
<div class="bg-white p-1 rounded-lg shadow-lg">
    <%= form_with url: "/subscribers/new" do |f| %>
    <div class="flex flex-col justify-center items-center">
        <%= f.label "Enter your email:", class: "text-sm md:text-xl mb-2 mt-4" %>
        <%= f.email_field :title, autofocus: true, autocomplete: "email", class: 'rounded' %>
        <%= f.submit "Send me jobs!", class: "bg-green rounded mt-4 p-2 md:p-2 text-white hover:text-black" %>
    </div>
    <% end %>
    <div class="flex flex-col justify-center items-center">
        <% flash.each do |type, msg| %>
        <div class="bg-green-100 border-2 border-green-500 text-green-700 mt-10 flex align-items" role="alert">
            <div class="pt-4 pl-2">
                <p id="flash-message"><%= msg %></p>
            </div>
        </div>
        <% end %>
    </div>
</div>
<% end %>